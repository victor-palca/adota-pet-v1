generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AnimalSex {
  MACHO
  FEMEA
}

enum AnimalType {
  CACHORRO
  GATO
}

model Org {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  cnpj          String   @unique
  description   String?
  phone         String   @unique
  city          String
  state         String
  created_at    DateTime @default(now())
  pet           Pet[]

  @@map("orgs")
}

model Pet {
  id          String     @id @default(uuid())
  type        AnimalType
  name        String?
  age         Int?
  isFixed     Boolean    @default(false)
  description String?
  animalSex   AnimalSex
  org         Org        @relation(fields: [org_id], references: [id])
  org_id      String
  created_at  DateTime   @default(now())

  @@map("pets")
}
